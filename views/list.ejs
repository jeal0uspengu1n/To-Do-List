<%- include("header") -%>
  <body>
    <div class="container-fluid">
      <div class="box" id="heading">
        <h1><%=day%></h1>
      </div>
      <div class="box">
          <% for(var i=0;i<newItems.length;i++){ %>
            <div class="item">
              <input type="checkbox" name="" value="">
              <p> <%=newItems[i]%> </p>
            </div>
          <% } %>
          <form class="item" action="/" method="post">
            <input type="text" name="new_list_item" value="" placeholder="New item" autocomplete="off">
            <button type="submit" class="" name="button">+</button>
          </form>
      </div>
    </div>
  </body>
<%- include("footer") -%>
